import { BrowserRouter, Routes, Route, Navigate } from 'react-router-dom'
import { lazy, Suspense } from 'react'
import { AuthProvider } from './contexts/AuthContext'
import { ProtectedRoute } from './components/ProtectedRoute'
import { DashboardLayout } from './layouts/DashboardLayout'
import { LoginPage } from './pages/LoginPage'
import { TestApiIntegration } from './components/TestApiIntegration'
import TestWizard from './components/TestWizard'
import SimpleTest from './components/SimpleTest'
import WorkingWizard from './components/WorkingWizard'
import ApiTest from './components/ApiTest'
import WorkersPageEnhanced from './pages/Workers/WorkersPageEnhanced'
import { TestEnhancedTable } from './components/TestEnhancedTable'
import TimesheetPage from './pages/Reports/TimesheetPage'
import TestDashboard from './components/TestDashboard'
import TestShiftStatus from './components/TestShiftStatus'
import TestBulkHours from './components/TestBulkHours'
import { DebugApi } from './components/DebugApi'
import { JobsPage } from './pages/Jobs'
import CreateJobWizard from './pages/Jobs/CreateJobWizard'
import { TestDashboardNew } from './components/TestDashboardNew'
import { SimplifiedDashboardPage } from './pages/SimplifiedDashboardPage'
import { TestSimplifiedDashboard } from './components/TestSimplifiedDashboard'

// Lazy load pages for better performance
const DashboardPage = lazy(() => import('./pages/DashboardPage').then(module => ({ default: module.DashboardPage })))
const WorkersPage = lazy(() => import('./pages/WorkersPage').then(module => ({ default: module.WorkersPage })))
const WorkerDetail = lazy(() => import('./pages/WorkerDetail'))
const ShiftsList = lazy(() => import('./pages/ShiftsList'))
const ShiftDetail = lazy(() => import('./pages/ShiftDetail'))
const ShiftForm = lazy(() => import('./pages/ShiftForm'))
const ShiftWizard = lazy(() => import('./components/Shifts/ShiftWizard'))
const AssignmentsList = lazy(() => import('./pages/AssignmentsList'))
const WorkerSchedule = lazy(() => import('./pages/WorkerSchedule'))
const CalendarView = lazy(() => import('./pages/CalendarView'))
const ActivityLogsPage = lazy(() => import('./pages/ActivityLogsPage'))

// Loading component
const PageLoader = () => (
  <div className="flex items-center justify-center h-screen">
    <div className="text-center">
      <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mx-auto"></div>
      <div className="text-gray-500 mt-4">Loading...</div>
    </div>
  </div>
)

function App() {
  return (
    <BrowserRouter>
      <AuthProvider>
        <Suspense fallback={<PageLoader />}>
          <Routes>
          {/* Public routes */}
          <Route path="/login" element={<LoginPage />} />
          
          {/* Protected routes with layout */}
          <Route
            path="/dashboard"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <SimplifiedDashboardPage />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          
          {/* Jobs management */}
          <Route
            path="/jobs"
            element={
              <ProtectedRoute>
                <JobsPage />
              </ProtectedRoute>
            }
          />
          <Route
            path="/jobs/create"
            element={
              <ProtectedRoute>
                <CreateJobWizard />
              </ProtectedRoute>
            }
          />

          {/* Worker management */}
          <Route
            path="/workers"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <WorkersPage />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          <Route
            path="/workers/:id"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <WorkerDetail />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          <Route
            path="/workers/:id/schedule"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <WorkerSchedule />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          
          {/* Shifts management */}
          <Route
            path="/shifts"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <ShiftsList />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          <Route
            path="/shifts/new"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <ShiftForm />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          <Route
            path="/shifts/wizard"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <ShiftWizard />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          <Route
            path="/shifts/:id"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <ShiftDetail />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          <Route
            path="/shifts/:id/edit"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <ShiftForm />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          
          {/* Assignments management */}
          <Route
            path="/assignments"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <AssignmentsList />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          
          {/* Calendar view */}
          <Route
            path="/calendar"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <CalendarView />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          
          <Route
            path="/activity"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <ActivityLogsPage />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          
          {/* Test API Integration */}
          <Route
            path="/test-api"
            element={
              <ProtectedRoute>
                <DashboardLayout>
                  <TestApiIntegration />
                </DashboardLayout>
              </ProtectedRoute>
            }
          />
          
          {/* Test Wizard (No Auth Required) */}
          <Route
            path="/test-wizard"
            element={<TestWizard />}
          />
          
          {/* Simple Test (No Auth Required) */}
          <Route
            path="/simple-test"
            element={<SimpleTest />}
          />
          
          {/* Working Wizard (No Auth Required) */}
          <Route
            path="/working-wizard"
            element={<WorkingWizard />}
          />
          
          {/* API Test (No Auth Required) */}
          <Route
            path="/api-test"
            element={<ApiTest />}
          />
          
          {/* Enhanced Workers Page (No Auth Required for testing) */}
          <Route
            path="/workers-enhanced"
            element={<WorkersPageEnhanced />}
          />
          
          {/* Test Enhanced Table Components (No Auth Required) */}
          <Route
            path="/test-table"
            element={<TestEnhancedTable />}
          />
          
          {/* Timesheet Reports Page (No Auth Required for testing) */}
          <Route
            path="/reports/timesheet"
            element={<TimesheetPage />}
          />
          
          {/* Test Dashboard (No Auth Required for testing) */}
          <Route
            path="/test-dashboard"
            element={<TestDashboard />}
          />
          
          {/* Test Shift Status (No Auth Required for testing) */}
          <Route
            path="/test-shift-status"
            element={<TestShiftStatus />}
          />
          
          {/* Test Bulk Hours (No Auth Required for testing) */}
          <Route
            path="/test-bulk-hours"
            element={<TestBulkHours />}
          />
          
          {/* Default redirect */}
          <Route path="/" element={<Navigate to="/dashboard" replace />} />
          
          {/* Debug API (No Auth Required) */}
          <Route
            path="/debug-api"
            element={<DebugApi />}
          />
          
          {/* Test New Dashboard (No Auth Required) */}
          <Route
            path="/test-dashboard-new"
            element={<TestDashboardNew />}
          />
          
          {/* Test Simplified Dashboard (No Auth Required) */}
          <Route
            path="/test-simplified-dashboard"
            element={<SimplifiedDashboardPage />}
          />
          
          {/* Test Simplified Dashboard Components (No Auth Required) */}
          <Route
            path="/test-simplified-components"
            element={<TestSimplifiedDashboard />}
          />
          
          {/* 404 */}
          <Route path="*" element={<Navigate to="/dashboard" replace />} />
        </Routes>
        </Suspense>
      </AuthProvider>
    </BrowserRouter>
  )
}

export default App
